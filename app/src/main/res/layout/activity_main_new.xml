                <!--style="@style/GoBall"/>-->
                <!--<com.bbaek.lottogo.widget.NumberBall-->
                <!--android:id="@+id/ball2"-->
                <!--style="@style/GoBall"/>-->
                <!--<com.bbaek.lottogo.widget.NumberBall-->
