<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/deleteItem"
        android:layout_width="40dp"
        android:layout_height="120dp"
        android:background="@color/colorBallRed"
        android:gravity="center"
        android:tag="Bottom2">

        <ImageView
            android:id="@+id/trash"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/trash" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/resultHistoryDrwNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="400"/>

        <TextView
            android:id="@+id/resultHistoryDrwDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="2015-00-00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/resultHistoryDrwtNos1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 2 3 4 6" />
            <TextView
                android:id="@+id/resultHistoryDrwtNos2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 2 3 4 6" />
            <TextView
                android:id="@+id/resultHistoryDrwtNos3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 2 3 4 6" />
            <TextView
                android:id="@+id/resultHistoryDrwtNos4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 2 3 4 6" />
            <TextView
                android:id="@+id/resultHistoryDrwtNos5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 2 3 4 6" />
        </LinearLayout>
    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>
